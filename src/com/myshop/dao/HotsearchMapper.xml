<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.myshop.dao.HotsearchMapper">
	<!-- 查询热销商品搜索列表 -->
	<select id="queryHotsearchList" resultType="Hotsearch">
		select name, count from hotsearch ORDER BY count DESC LIMIT 5
	</select>
	
	<!-- 插入或更新热销商品搜索 -->
	<insert id="insertAndUpdateHotSearch" parameterType="String">
		call insertAndUpdateHotSearch(#{name})
	</insert>
</mapper>